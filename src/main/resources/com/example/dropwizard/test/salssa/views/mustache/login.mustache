<!DOCTYPE html>
<html>
  <head>
  	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">	
	<title>Login</title>
	<link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/custom.css" rel="stylesheet">
  </head>
  <body>
	
	<!-- Header Navbar -->
	
	<!-- User Notifications Area -->
	<div class="container">
		<div id="notificationsArea">
			{{#message}}
	        	<div class="alert alert-danger alert-dismissable">
	        		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
	        		<div>{{message}}</div>
	        	</div>
	        {{/message}}
		</div>
	</div>
    
    <!-- Login Form -->
    <div class="container">
      <form class="form-signin" id="loginForm" method="post" enctype="application/x-www-form-urlencoded">
        <h3 class="form-signin-heading">Please sign in</h3>
        <input type="text" id="username" class="form-control" placeholder="Username (Bosch Active Directory ID)" name = "username">
        <input type="password" id="pass" class="form-control" placeholder="Password" name="password">
        <div class="checkbox">
        </div>
        <button type="submit" class="btn btn-lg btn-primary btn-block" id="loginBtn">Login</button>
      </form>
	</div>
	
	<!-- Footer -->
	<footer class="footer">
      <div class="container">
        <div id="copyright">©2016 Bosch Automotive Service Solutions</div>
      </div>
    </footer>

	<script src="/config/config.js"></script>
	<script src="/lib/jquery/jquery.min.js"></script>
	<script src="/lib/bootstrap/js/bootstrap.min.js"></script>
	<script src="/lib/jquery-placeholders/jquery.placeholder.min.js"></script>
	<script src="/javascript/helper/helper.js"></script>
	<script src="/javascript/helper/layoutHelper.js"></script>
	<script src="/javascript/helper/navbar.js"></script>
	<script src="/javascript/auth/SessionManager.js"></script>
	<script src="/javascript/auth/AuthManager.js"></script>
	<script src="/javascript/login.js"></script>	

  </body>
</html>